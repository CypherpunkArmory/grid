[Unit]
Description=Consul
Documentation=https://consul.io/docs/
StartLimitIntervalSec=10
Wants=network-online.target
After=set-ip.service

[Service]
KillMode=process
KillSignal=SIGINT
ExecStart=/usr/bin/consul agent -config-file=/etc/consul.hcl
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
RestartSec=2
StartLimitBurst=3
LimitNOFILE=65536
AmbientCapabilities=CAP_NET_BIND_SERVICE
User=consul

[Install]
WantedBy=multi-user.target
